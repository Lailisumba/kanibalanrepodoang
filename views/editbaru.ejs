    <!-- Add CSS Croppie -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/croppie/2.6.5/croppie.min.css" crossorigin="anonymous" />
  <!-- Add JS Croppie -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/croppie/2.6.5/croppie.min.js"  crossorigin="anonymous"></script>
  <script>
  $(document).ready(function(){

    // Sembunyikan element dengan class "sudah_pilih" saat halaman pertama kali di-load
    $('.sudah_pilih').hide();

    // Tambahkan event listener pada input file
    $('#set_file').change(function() {
      // Jika nilai value dari input file tidak kosong
      if ($(this).val() != '') {
        // Tampilkan element dengan class "sudah_pilih"
        $('.sudah_pilih').show();
      } else {
        // Sembunyikan element dengan class "sudah_pilih"
        $('.sudah_pilih').hide();
      }
    });
    // Menyimpan gambar yang diupload pada preview
    var $uploadCrop;

    function readFile(input) {
      console.log(input.files);
      if (input.files && input.files[0]) {
        var reader = new FileReader();
        reader.onload = function (e) {
          $('#preview').attr('src', e.target.result);
          $uploadCrop.croppie('bind', {
            url: e.target.result
          }).then(function(){
            console.log('jQuery bind complete');
          });
        }
        reader.readAsDataURL(input.files[0]);
      }
      else {
        alert("Sorry - you're browser doesn't support the FileReader API");
      }
    }

    // Initiate croppie plugin
    $uploadCrop = $('#upload-demo').croppie({
      viewport: {
        width: 400,
        height: 400,
        type: 'circle'
      },
      boundary: {
        width: 500,
        height: 500
      }
    });

    // Ketika user memilih gambar yang akan diupload
    $('#set_file').on('change', function () {
      readFile(this);
    });

    // Ketika user meng-klik tombol Crop
    $('#registration-form').on('click', function (ev) {
      $uploadCrop.croppie('result', {
        type: 'canvas',
        size: 'viewport'
      }).then(function (resp) {
        $('#profile_picture').val(resp);
        $('#preview').attr('src', resp);
        $('#upload-result').attr('disabled', false);
      });
    });

  });
  </script>
  <style>
    label {
      font-weight: 700;
    }
  </style>

</html>