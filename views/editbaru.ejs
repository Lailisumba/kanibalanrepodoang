    <div class="container mt-5">
        <h1 style="text-transform: capitalize;">Edit Data <%= user.full_name %></h1>
        <form method="POST" enctype="multipart/form-data" action="/edit/<%= user._id %>" id="registration-form">
            <div class="form-group">
              <label for="email">Nomor Peserta</label>
              <input type="number" class="form-control" id="user_number" name="user_number" value="<%= user.user_number %>" required>
          </div>
            <div class="form-group">
                <label for="email">Email</label>
                <input type="email" class="form-control" id="email" name="email" value="<%= user.email %>" required>
            </div>
            <div class="form-group">
                <label for="full_name">Nama Lengkap | <i>Full Name</i></label>
                <input type="text" class="form-control" id="full_name" name="full_name" value="<%= user.full_name %>" required>
            </div>
            <div class="form-group">
                <label for="born_date">Tanggal Lahir | <i>BirthDate</i></label>
                <input type="date" class="form-control" id="born_date" name="born_date" value="<%= user.born_date %>" required>
            </div>
            <div class="form-group">
                <label for="city">Kota Asal | <i>Country/City Origin</i></label>
                <input type="text" class="form-control" id="city" name="city" value="<%= user.city%>" required>
            </div>
            <div class="form-group">
                <label for="phone_number">Nomor Whatsapp (Jika Luar negeri pastikan start dengan kode negara. Contoh: Singapore 65) |  <i>Start with your contry code. Example ðŸ‡¸ðŸ‡¬ +65384878339</i></label>
                <input type="number" class="form-control" id="phone_number" name="phone_number" value="<%= user.phone_number %>" required>
            </div>
            <div class="form-group">
                <label for="position_at_church">Posisi di Gereja | <i>Position At Church</i></label>
                <input type="text" class="form-control" id="position_at_church" name="position_at_church" value="<%= user.position_at_church %>" required>
            </div>
            <div class="form-group">
                <label for="tshirt_size">Ukuran Kaos  | <i>T-shirt Size</i></label>
                <select name="tshirt_size" id="tshirt_size" required>
                 <option value="S" <%= user.tshirt_size === 'S' ? 'selected' : '' %>>S</option>
                 <option value="M" <%= user.tshirt_size === 'M' ? 'selected' : '' %>>M</option>
                 <option value="L" <%= user.tshirt_size === 'L' ? 'selected' : '' %>>L</option>
                 <option value="XL" <%= user.tshirt_size === 'XL' ? 'selected' : '' %>>XL</option>
                  <option value="XXL" <%= user.tshirt_size === 'XXL' ? 'selected' : '' %>>XXL</option>
                   <option value="XXXL" <%= user.tshirt_size === 'XXXL' ? 'selected' : '' %>>XXXL</option>
                   <option value="XXXXL" <%= user.tshirt_size === 'XXXXL' ? 'selected' : '' %>>XXXXL</option>
                 </select>
            </div>
            <div class="form-group">
                <label for="blazer_size">Ukuran Jas | <i>Blazer Size</i></label>
                <select name="blazer_size" id="blazer_size" required>
                 <option value="S" <%= user.blazer_size === 'S' ? 'selected' : '' %>>S</option>
                 <option value="M" <%= user.blazer_size === 'M' ? 'selected' : '' %>>M</option>
                 <option value="L" <%= user.blazer_size === 'L' ? 'selected' : '' %>>L</option>
                 <option value="XL" <%= user.blazer_size === 'XL' ? 'selected' : '' %>>XL</option>
                  <option value="XXL" <%= user.tshirt_size === 'XXL' ? 'selected' : '' %>>XXL</option>
                   <option value="XXXL" <%= user.tshirt_size === 'XXXL' ? 'selected' : '' %>>XXXL</option>
                   <option value="XXXXL" <%= user.tshirt_size === 'XXXXL' ? 'selected' : '' %>>XXXXL</option>
                 </select>
            </div>
          <h4>Foto Lama:</h4>
          <img name="previous_picture" id="previous_picture" src="<%= user.profile_picture %>" height="250px"><br/>
          <div class="form-group">
            <label for="set_file">Pilih foto anda dari hape/laptop anda | <i>Choose Photo from your device</i></label>
            <input type="file" class="form-control-file" id="set_file" accept="image/*">
            <br/>
            <br/>
            <div class="sudah_pilih">
              <label for="profile_picture" class="text-center"><b>Silahkan Geser dan Atur Foto anda sesuai dengan lingkaran berikut</b></label>
              <div class="photo-container">
                <div id="upload-demo"></div>
              </div>
            </div>
            <!-- <button class="upload-result btn btn-primary" id="upload-result">Crop</button> -->
            <input hidden type="text" id="profile_picture" name="profile_picture">
            <img width="500px" src="" alt="" id="preview"  />
          </div>
          
            <button type="submit" class="btn btn-success">Edit</button>
        </form>
      <br/>
      <br/>
      <br/>
      <br/>
      <br/>
      <br/>
    </div>
</body>

  <!-- Add Jquery JS -->
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
  <!-- Add Popper JS -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
  <!-- Add Bootstrap JS -->
