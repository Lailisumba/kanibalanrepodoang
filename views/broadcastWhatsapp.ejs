<head>
 <meta charset="utf-8">
 <title>Edit User</title>
  <script>
  function confirmSubmit() {
    var message = "Apakah Anda yakin ingin mengirim pesan ini ke semua peserta?";
    var confirm = window.confirm(message);
    if (confirm) {
      // Submit form
      document.getElementById("form-broadcast").submit();
    } else {
      // Cancel
      return false;
    }
  }

  document.getElementById("submit-broadcast").addEventListener("click", confirmSubmit);
  </script>
</head>
<link href="https://fonts.googleapis.com/css?family=Roboto:400,500&display=swap" rel="stylesheet">
